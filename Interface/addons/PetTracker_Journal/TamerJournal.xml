<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Button name="PetTrackerTamerButton" inherits="CompanionListButtonTemplate" virtual="true">
		<Frames>
			<PlayerModel parentKey="model" useParentLevel="true">
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.icon" x="1" y="1"/>
					<Anchor point="TOPRIGHT" relativeKey="$parent.icon" x="-1"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY" textureSubLevel="1">
						<Texture parentKey="quality" file="Interface\Common\WhiteIconFrame">
							<Anchors>
								<Anchor point="TOPLEFT" x="-2"/>
								<Anchor point="BOTTOMRIGHT" y="-1"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY" textureSubLevel="2">
						<Texture parentKey="levelBG" file="Interface\PetBattles\PetJournal">
							<Anchors>
								<Anchor point="BOTTOMRIGHT" x="3" y="-4"/>
							</Anchors>
							<Size x="21" y="21"/>	
							<TexCoords left="0.06835938" right="0.10937500" top="0.02246094" bottom="0.04296875"/>	
						</Texture>
						<FontString parentKey="level" inherits="GameFontNormalSmall" justifyH="CENTER">
							<Size x="0" y="12"/>
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.levelBG" x="1" y="-1"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnEvent function="Model_OnEvent"/>
				</Scripts>
			</PlayerModel>
		</Frames>
		<Scripts>
			<OnLoad>
				Model_OnLoad(self.model)
				self.model:SetPortraitZoom(1)
				self.model:SetRotation(-.2)
				self.dragButton:Hide()
			</OnLoad>
			<OnClick>
				self:GetParent():GetParent():GetParent():Display(self.tamer)
			</OnClick>
			<OnDragStart></OnDragStart>
		</Scripts>
	</Button>

	<Button name="PetTrackerTamerLoot" inherits="ItemButtonTemplate" virtual="true">
		<Scripts>
			<OnEnter>
				GameTooltip:SetOwner(self, 'ANCHOR_BOTTOMRIGHT')
				GameTooltip:SetHyperlink(self.link)
				GameTooltip:Show()
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide()
			</OnLeave>			
			<OnClick>
				if self.link and IsModifiedClick() then
					HandleModifiedItemClick(self.link)
				end
			</OnClick>
		</Scripts>
	</Button>

	<Frame name="PetTrackerTamerJournal" parent="PetJournalParent" setAllPoints="true" hidden="true">
		<Frames>
			<Frame parentKey="Count" useParentLevel="true" inherits="InsetFrameTemplate3">
				<Size x="130" y="20"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="70" y="-35"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="Number" inherits="GameFontHighlightSmall" justifyH="RIGHT">
							<Anchors>
								<Anchor point="RIGHT" x="-10" y="0"/>
							</Anchors>
						</FontString>
						<FontString parentKey="Label" inherits="GameFontNormalSmall" text="Total Tamers" justifyH="LEFT">
							<Anchors>
								<Anchor point="LEFT" x="10" y="0"/>
								<Anchor point="RIGHT" relativeKey="$parent.Number" relativePoint="LEFT" x="-3" y="0"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>			
			<Frame name="$parentLeftInset" useParentLevel="true" inherits="InsetFrameTemplate" parentKey="LeftInset">
				<Size x="260" y="496"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="4" y="-60" />
					<Anchor point="BOTTOMLEFT" x="4" y="26" />
				</Anchors>
			</Frame>
			<Frame name="$parentRightInset" useParentLevel="true" inherits="InsetFrameTemplate" parentKey="RightInset">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-6" y="-252"/>
					<Anchor point="BOTTOMLEFT" relativeTo="$parentLeftInset" relativePoint="BOTTOMRIGHT" x="20" y="0"/>
				</Anchors>
			</Frame>
			<EditBox name="$parentSearchBox" inherits="SearchBoxTemplate" parentKey="SearchBox" letters="50">
				<Size x="237" y="20"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentLeftInset" x="15" y="-9"/>
				</Anchors>
			</EditBox>
			<ScrollFrame name="$parentList" parentKey="List" inherits="HybridScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentLeftInset" x="3" y="-36"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="$parentLeftInset" x="-2" y="5"/>
				</Anchors>
				<Frames>
					<Slider name="$parentScrollBar" inherits="HybridScrollBarTrimTemplate" parentKey="scrollBar">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="4" y="20"/>
							<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="4" y="11"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.trackBG:Show();
								self.trackBG:SetVertexColor(0, 0, 0, 0.75);
							</OnLoad>
						</Scripts>
					</Slider>
				</Frames>
			</ScrollFrame>
			
			<Frame name="$parentCard" useParentLevel="true" inherits="InsetFrameTemplate" parentKey="Card">
				<Size x="411" y="171"/>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-6" y="-60" />
				</Anchors>

				<Frames>
					<PlayerModel name="$parentModel" inherits="ModelTemplate" parentKey="model">
						<Size x="173" y="135"/>
						<Anchors>
							<Anchor point="TOPLEFT" x="45" y="-21"/>
						</Anchors>
						<Scripts>
							<OnLoad function="Model_OnLoad"/>
							<OnEvent function="Model_OnEvent"/>
						</Scripts>
					</PlayerModel>
				</Frames>

				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentBG" file="Interface\PetBattles\PetJournal">
							<Anchors>
								<Anchor point="TOPLEFT"/>
							</Anchors>
							<Size x="408" y="171"/>	
							<TexCoords left="0.00195313" right="0.79882813" top="0.59277344" bottom="0.75976563"/>	
						</Texture>	
					</Layer>

					<Layer level="OVERLAY">
						<FontString inherits="GameFontNormal" justifyH="LEFT" justifyV="BOTTOM" parentKey="name">
							<Anchors>
								<Anchor point="TOPLEFT" x="10" y="-10"/>
							</Anchors>
						</FontString>

						<FontString inherits="GameFontNormalSmall" justifyH="LEFT" parentKey="daily">
							<Anchors>
								<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeKey="$parent.name" x="0" y="-2"/>
							</Anchors>
						</FontString>

						<FontString inherits="GameFontHighlight" justifyH="RIGHT" parentKey="money">
							<Anchors>
								<Anchor point="TOPRIGHT" x="-10" y="-10"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<Frame parentKey="TeamBorder" inherits="PetTrackerSlotBorder">
				<Anchors>
					<Anchor point="CENTER" relativeKey="$parent.RightInset"/>
				</Anchors>
			</Frame>

			<!--<CheckButton parentKey="Tab1" name="$parentDetailsTab" inherits="SpellBookSkillLineTabTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="0" y="-36"/>
				</Anchors>
			</CheckButton>

			<CheckButton parentKey="Tab2" name="$parentFightsTab" inherits="SpellBookSkillLineTabTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="SpellBookSkillLineTab1" relativePoint="BOTTOMLEFT" x="0" y="-17"/>
				</Anchors>
			</CheckButton>-->
		</Frames>
	</Frame>
</Ui>